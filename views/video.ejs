<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/output.css">
    <script src="https://kit.fontawesome.com/46d8f8fb7b.js" crossorigin="anonymous"></script>

    <title>Document</title>
</head>
<body class="dark:bg-darkBg1 dark:text-white">

    <div class="container">
        <video id="videoPlayer" autoplay controls>
            <source src="/assets/sample.mp4" type="video/mp4">
    
        </video>
    
        <div id="videoControls">
            <div class="video-progress">
                <div class="w-full bg-gray-200 rounded-sm h-2.5 mb-4 dark:bg-gray-700">
                    <div  id="progress-bar" class="bg-jetBlue h-2.5 rounded-sm dark:bg-blue-500" style="">

                    </div>
                    <input id="timeseek" value="0" min="0" type="range" step="1">


                </div>   
                <!-- <div class="timeseek-popup">00:00</div> -->
            </div>
            <div class="controls px-6">

                <div class="flex space-x-12 w-full">
                    <button id="playback-icons">
                        <i class="fa-solid fa-play text-2xl"></i>
                        <i class="fa-solid fa-pause text-2xl hidden"></i>
                    </button>
            
                    <div class="time">
                        <time class="time-elapsed">00:00</time>
                        <span>/</span>
                        <time class="video-duration">00:00</time>
                    </div>
            
                   
            
                    <div class="volume-controls">
                        <input id="volume" orient="vertical" class="volume hidden hover:flex" value="1" type="range" max="1" min="0" step="0.01">

                        <button class="volume-btn">

                            <i class="fa-solid fa-volume-low text-lg hidden"></i>
                            <i class="fa-solid fa-volume-xmark text-lg hidden"></i>
                            <i class="fa-solid fa-volume-high text-lg"></i>
            
                        </button>
                    </div>
                </div>
                
                

                <button class="justify-self-end text-lg fullscreenBtns">
                    <i class="fa-solid fa-expand"></i>
                    <i class="fa-solid fa-compress hidden"></i>

                </button>
        
            </div>
           
    
        </div>
    </div>

   

    <script src="/scripts/video.js"></script>
</body>
</html>